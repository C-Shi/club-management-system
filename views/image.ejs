<% include ./partial/header %>

<div class="container">
  <div class="row justify-content-center">
    <form action="/student/<%= student._id%>/image?_method=PUT" method="POST" enctype="multipart/form-data" class="justify-content-center">
       <!-- upload student image -->
      <div class="form-group">
          <label for="image">Choose your favorate picture: </label>
          <input type="file" id="image" name="image" accept="image/*" class="form-control">
      </div>

      <button class="btn btn-success">Update Profile</button>
      <a href="/student/<%= student._id%>" class="btn btn-secondary">Go Back</a>
    </form>
  </div>
</div>

