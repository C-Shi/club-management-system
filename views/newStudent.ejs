<% include ./partial/header %>

<div class="container">
  <div class="row">
    <form action="/student" method="POST">
      <!-- 1st row for person name, school and grade -->
      <div class="row">
        <div class="form-group col">
          <label>First Name</label>
          <input type="text" name="first" placeholder="eg: Mark" class="form-control">
        </div>
        <div class="form-group col">
          <label>Last Name</label>
          <input type="text" name="last" placeholder="eg: Lee" class="form-control">
        </div>
        <div class="form-group col">
          <label>School</label>
          <input type="text" name="school" placeholder="Sun highschool" class="form-control">
        </div>
        <div class="form-group col">
          <label>Grade</label>
          <select class="form-control" name="grade">
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
            <option>11</option>
          </select>
        </div>
      </div>

      <!-- 2nd row for person height and weight -->
      <div class="row">
        <div class="form-group col">
          <label>Height: feet</label>
          <input type="number" name="feet" class="form-control">
        </div>
        <div class="form-group col">
          <label>Height: inches</label>
          <input type="number" name="inches" class="form-control">
        </div>
        <div class="form-group col">
          <label>Weight</label>
          <input type="number" name="weight" class="form-control">
        </div>
      </div>

      <!-- 3rd row for primary position -->
      <div class="row">
        <div class="form-group col">
          <legend class="col-form-label pt-0">Primary Position</legend>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="position" id="inlineRadio1" value="WR">
            <label class="form-check-label" for="inlineRadio1">WR</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="position" id="inlineRadio2" value="RB">
            <label class="form-check-label" for="inlineRadio2">RB</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="position" id="inlineRadio3" value="QB">
            <label class="form-check-label" for="inlineRadio3">QB</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="position" id="inlineRadio4" value="OL">
            <label class="form-check-label" for="inlineRadio4">OL</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="position" id="inlineRadio5" value="K">
            <label class="form-check-label" for="inlineRadio5">K</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="position" id="inlineRadio6" value="P">
            <label class="form-check-label" for="inlineRadio6">P</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="position" id="inlineRadio7" value="DL">
            <label class="form-check-label" for="inlineRadio7">DL</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="position" id="inlineRadio8" value="LB">
            <label class="form-check-label" for="inlineRadio8">LB</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="position" id="inlineRadio9" value="DB">
            <label class="form-check-label" for="inlineRadio9">DB</label>
          </div>
        </div>
      </div>

      <!-- 4rd row for physical ability -->
      <div class="row">
        <div class="form-group col">
          <label>Arm Span</label>
          <input type="number" name="armSpan" class="form-control">
        </div>
        <div class="form-group col">
          <label>Bench Press</label>
          <input type="number" name="benchPress" class="form-control">
        </div>
        <div class="form-group col">
          <label>Broad</label>
          <input type="number" name="broad" class="form-control">
        </div>
        <div class="form-group col">
          <label>Vertical</label>
          <input type="number" name="vertical" class="form-control">
        </div>
      </div>

      <!-- 5th row continue of physical ability -->
      <div class="row">
        <div class="form-group col">
          <label>40: 1st</label>
          <input type="number" name="fortyFirst" class="form-control">
        </div>
        <div class="form-group col">
          <label>A40: 2nd</label>
          <input type="number" name="fortySecond" class="form-control">
        </div>
        <div class="form-group col">
          <label>Shuttle: 1st L</label>
          <input type="number" name="shuttleFirst" class="form-control">
        </div>
        <div class="form-group col">
          <label>Shuttle: 2nd R</label>
          <input type="number" name="shuttleSecond" class="form-control">
        </div>
      </div>

      <!-- 6th row add strength -->
      <div class="row">
        <div class="form-group col">
          <label>What is this student's strength</label>
          <textarea class="form-control" placeholder="eg: This student run fast" rows="5" name="strength"></textarea>
        </div>
      </div>
      <!-- 7th row add weakness -->
      <div class="row">
        <div class="form-group col">
          <label>What is this student's weakness</label>
          <textarea class="form-control" placeholder="eg: This student should get more weight" rows="5" name="weakness"></textarea>
        </div>
      </div>

      <!-- end of input -->
      <button class="btn btn-primary">Create Student Profile</button>
      <a href="/player" class="btn btn-secondary">Go Back</a>
    </form>
  </div>
</div>


<% include ./partial/footer %>